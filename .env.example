# Server
PORT=3000
NODE_ENV=development

# MongoDB Write Database
MONGODB_WRITE_URI=mongodb://localhost:27017
MONGODB_WRITE_DB=inventory_write

# MongoDB Read Database
MONGODB_READ_URI=mongodb://localhost:27018
MONGODB_READ_DB=inventory_read

# RabbitMQ
RABBITMQ_URI=amqp://localhost:5672
RABBITMQ_EXCHANGE=inventory_events

# Optional: RabbitMQ Management UI credentials
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest